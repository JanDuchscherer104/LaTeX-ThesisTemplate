{
    //  ===============================
    //    LaTeX Workshop
    //  ===============================
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bind.altKeymap.enabled": true,
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "-pdf",
                "-outdir=output",
                "%DOC%"
            ]
        }
    ]
}